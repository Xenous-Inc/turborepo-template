{
    "$schema": "https://schemastore.org/package.json",
    "name": "web",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "git clean -xdf .cache .turbo .next node_modules",
        "dev": "pnpm with-env next dev --turbopack --port=3001",
        "build": "pnpm with-env next build",
        "start": "pnpm with-env next start",
        "check": "biome check .",
        "check:fix": "biome check . --write",
        "ci": "biome ci",
        "typecheck": "tsc --noEmit",
        "ui-add": "pnpm dlx shadcn@latest add",
        "with-env": "dotenvx run -f .env.local -f ../../.env --"
    },
    "dependencies": {
        "@orpc/client": "catalog:orpc",
        "@orpc/server": "catalog:orpc",
        "@orpc/tanstack-query": "catalog:orpc",
        "@t3-oss/env-nextjs": "catalog:",
        "@tanstack/react-form": "catalog:",
        "@tanstack/react-query": "catalog:",
        "@xenous/logger": "workspace:*",
        "@xenous/ui": "workspace:*",
        "@xenous/validators": "workspace:*",
        "better-auth": "catalog:",
        "jiti": "catalog:",
        "next": "15.3.0",
        "nuqs": "^2.7.1",
        "react": "catalog:react19",
        "react-dom": "catalog:react19",
        "rwdot": "^0.0.5",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@dotenvx/dotenvx": "catalog:",
        "@tailwindcss/postcss": "catalog:",
        "@tanstack/react-query-devtools": "catalog:",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "catalog:node22",
        "@types/react": "catalog:react19",
        "@types/react-dom": "catalog:react19",
        "@xenous/biome-config": "workspace:*",
        "@xenous/typescript": "workspace:*",
        "typescript": "catalog:"
    }
}
