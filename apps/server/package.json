{
    "$schema": "https://schemastore.org/package.json",
    "name": "server",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "git clean -xdf .cache .turbo .nitro .output node_modules",
        "prepare": "pnpm with-env nitro prepare",
        "dev": "pnpm with-env nitro dev",
        "prebuild": "pnpm with-env nitro prepare",
        "build": "concurrently 'pnpm with-env nitro build' 'tsdown'",
        "start": "NODE_ENV=production pnpm with-env node .output/server/index.mjs",
        "check": "biome check .",
        "check:fix": "biome check . --write",
        "ci": "biome ci",
        "typecheck": "tsc --noEmit",
        "with-env": "dotenvx run -f .env.local -f ../../.env --"
    },
    "dependencies": {
        "@better-auth/expo": "catalog:",
        "@orpc/client": "catalog:orpc",
        "@orpc/openapi": "catalog:orpc",
        "@orpc/server": "catalog:orpc",
        "@orpc/zod": "catalog:orpc",
        "@t3-oss/env-core": "catalog:",
        "@xenous/db": "workspace:^",
        "better-auth": "catalog:",
        "jiti": "catalog:",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@dotenvx/dotenvx": "catalog:",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/node": "catalog:node22",
        "@xenous/biome-config": "workspace:*",
        "@xenous/typescript": "workspace:*",
        "concurrently": "^9.2.1",
        "nitro": "^3.0.1-alpha.1",
        "tsdown": "^0.15.6",
        "typescript": "catalog:"
    }
}
