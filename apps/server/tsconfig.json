{
    "$schema": "https://schemastore.org/tsconfig.json",
    "extends": ["@xenous/typescript/base.json"],
    "compilerOptions": {
        /** Base Options */
        "module": "esnext",
        "lib": ["ES2024", "DOM"],
        "jsx": "preserve",

        /** Preact */
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",

        /** Aliases */
        "baseUrl": ".",
        "paths": {
            "#imports": ["./.nitro/types/nitro-imports.d.ts"],
            "~/env": ["./env.ts"],
            "~/*": ["./src/*"]
        },

        /** Allow using project references */
        "composite": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "outDir": ".output/types"
    },
    "include": ["src", "**/*.ts", "**/*.tsx", "./package.json"]
}
