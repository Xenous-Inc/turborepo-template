{
    "$schema": "https://schemastore.org/tsconfig.json",
    "compilerOptions": {
        /** Base Options */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2024",
        "lib": ["ES2024"],
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,

        /** Keep TSC performant in monorepos */
        "incremental": true,
        "disableSourceOfProjectReferenceRedirect": false, // disable because project references doesn't work well with it
        "tsBuildInfoFile": "${configDir}/.cache/tsbuildinfo.json",

        /** Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "checkJs": true,
        "forceConsistentCasingInFileNames": true,

        /** Transpile using Bundler (not tsc) */
        "module": "preserve",
        "moduleResolution": "bundler",
        "noEmit": true,
        "verbatimModuleSyntax": true
    },
    "exclude": ["node_modules", "build", "dist", ".next", ".expo"]
}
