{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "linter": {
        "rules": {
            "a11y": {
                "noLabelWithoutControl": {
                    "level": "warn",
                    "options": {
                        "inputComponents": [
                            "Input",
                            "Checkbox",
                            "Radio",
                            "Switch"
                        ]
                    }
                },
                "noStaticElementInteractions": "error",
                "useSemanticElements": "off"
            },
            "nursery": {
                "useSortedClasses": {
                    "level": "warn",
                    "options": {
                        "attributes": ["className", "classList", "ngClass"],
                        "functions": ["cn", "cx", "clsx", "cva", "tw", "tw.*"]
                    },
                    "fix": "safe"
                }
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            }
        }
    },
    "css": {
        "parser": {
            "tailwindDirectives": true
        }
    }
}
