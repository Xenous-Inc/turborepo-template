{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "noProcessEnv": "error",
                "noRestrictedImports": {
                    "level": "error",
                    "options": {
                        "paths": {
                            "process": "env"
                        }
                    }
                }
            }
        }
    }
}
